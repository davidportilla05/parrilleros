# =====================================================
# CONFIGURACIÓN DE BASE DE DATOS MYSQL
# =====================================================

# Host de la base de datos
DB_HOST=localhost

# Puerto de MySQL (por defecto 3306)
DB_PORT=3306

# Usuario de la base de datos
DB_USER=root

# Contraseña de la base de datos
DB_PASSWORD=admin

# Nombre de la base de datos
DB_NAME=parrilleros_db

# =====================================================
# CONFIGURACIÓN DE LA APLICACIÓN
# =====================================================

# Entorno de la aplicación (development, production)
NODE_ENV=development

# Puerto de la aplicación
PORT=3000

# URL base de la aplicación
BASE_URL=http://localhost:3000

# =====================================================
# CONFIGURACIÓN DE ARCHIVOS
# =====================================================

# Directorio para almacenar PDFs de facturas
INVOICES_DIR=./storage/invoices

# Directorio para backups de base de datos
BACKUP_DIR=./storage/backups

# =====================================================
# CONFIGURACIÓN DE EMAIL (OPCIONAL)
# =====================================================

# Configuración SMTP para envío de facturas por email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASSWORD=tu-password-de-aplicacion
SMTP_FROM=noreply@parrilleros.com

# =====================================================
# CONFIGURACIÓN DE SEGURIDAD
# =====================================================

# Clave secreta para JWT (si se implementa autenticación)
JWT_SECRET=tu-clave-secreta-muy-segura

# Clave para encriptación de datos sensibles
ENCRYPTION_KEY=tu-clave-de-encriptacion

# =====================================================
# CONFIGURACIÓN DE LOGS
# =====================================================

# Nivel de logs (debug, info, warning, error)
LOG_LEVEL=info

# Directorio para archivos de log
LOG_DIR=./logs

# =====================================================
# CONFIGURACIÓN DE BACKUP
# =====================================================

# Activar backup automático diario
AUTO_BACKUP=true

# Hora para backup automático (formato 24h)
BACKUP_TIME=02:00

# Días de retención de backups
BACKUP_RETENTION_DAYS=30

# =====================================================
# CONFIGURACIÓN DE DESARROLLO
# =====================================================

# Activar modo debug
DEBUG=true

# Mostrar queries SQL en consola
SHOW_SQL_QUERIES=false

# Activar recarga automática de datos
AUTO_RELOAD_DATA=true